APP_NAME="VumaShops"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://shops.vumacloud.com

LOG_CHANNEL=stack
LOG_LEVEL=warning

# ── Database (DigitalOcean Managed MySQL) ────────────────────────
DB_CONNECTION=mysql
DB_HOST=your-db-cluster.db.ondigitalocean.com
DB_PORT=25060
DB_DATABASE=vumashops
DB_USERNAME=doadmin
DB_PASSWORD=
DB_SSL_CA=/etc/ssl/certs/ca-certificates.crt

# ── Cache / Queue (DigitalOcean Managed Valkey) ──────────────────
REDIS_HOST=your-valkey-cluster.db.ondigitalocean.com
REDIS_PORT=25061
REDIS_PASSWORD=
REDIS_USERNAME=default
REDIS_SCHEME=tls

CACHE_DRIVER=redis
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# ── SaaS Config ──────────────────────────────────────────────────
SAAS_BASE_DOMAIN=shops.vumacloud.com
SAAS_DEFAULT_PLAN=starter
SAAS_TRIAL_DAYS=14
SAAS_GRACE_DAYS=7
SAAS_BILLING_PROVIDER=paystack
SAAS_DUNNING_MAX_ATTEMPTS=5
SAAS_DUNNING_RETRY_HRS=24

# ── Paystack ─────────────────────────────────────────────────────
PAYSTACK_PUBLIC_KEY=pk_live_xxxxxxxxxxxx
PAYSTACK_SECRET_KEY=sk_live_xxxxxxxxxxxx
PAYSTACK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# ── Safaricom M-Pesa (Kenya – Daraja) ────────────────────────────
MPESA_KE_CONSUMER_KEY=
MPESA_KE_CONSUMER_SECRET=
MPESA_KE_SHORTCODE=
MPESA_KE_PASSKEY=
MPESA_KE_BASE_URL=https://api.safaricom.co.ke

# ── MTN MoMo Collections ─────────────────────────────────────────
MTN_MOMO_COLLECTION_SUB_KEY=
MTN_MOMO_API_USER=
MTN_MOMO_API_KEY=
MTN_MOMO_ENV=production
MTN_MOMO_BASE_URL=https://proxy.momoapi.mtn.com/collection

# ── Airtel Money ─────────────────────────────────────────────────
AIRTEL_CLIENT_ID=
AIRTEL_CLIENT_SECRET=
AIRTEL_COUNTRY=KE
AIRTEL_CURRENCY=KES
AIRTEL_BASE_URL=https://openapi.airtel.africa

# ── Vodacom Tanzania M-Pesa ──────────────────────────────────────
VODACOM_TZ_API_KEY=
VODACOM_TZ_PUBLIC_KEY=
VODACOM_TZ_SERVICE_PROVIDER_CODE=
VODACOM_TZ_BASE_URL=https://openapi.m-pesa.com

# ── Email (Mailgun) ──────────────────────────────────────────────
MAIL_MAILER=mailgun
MAILGUN_DOMAIN=mg.vumacloud.com
MAILGUN_SECRET=
MAIL_FROM_ADDRESS=noreply@vumacloud.com
MAIL_FROM_NAME="VumaShops"

# ── SMS (Africa's Talking) ───────────────────────────────────────
AFRICASTALKING_USERNAME=vumashops
AFRICASTALKING_API_KEY=

# ── DigitalOcean Spaces (Media Storage) ─────────────────────────
FILESYSTEM_DISK=spaces
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_REGION=nyc3
DO_SPACES_BUCKET=vumashops-media
DO_SPACES_URL=https://vumashops-media.nyc3.cdn.digitaloceanspaces.com
